<% include ../static/header %>
<div class="container">
    <div class="col-md-12">
        <% if(pageErrorMessage.length > 0) { %>
        <p class="bg-primary"><%= pageErrorMessage %></p>
        <% } %>
    </div>
    <div class="col-md-6">
        <h3>Login</h3>
        <form method="post" role="form">
            <div class="form-group">
                <label for="username_existing">Email</label>
                <input type="text" placeholder="Email" name="username_existing" class="form-control">

                <label for="password_existing">Password</label>
                <input type="password" placeholder="Password" name="password_existing" class="form-control">

                <input type="submit" class="btn btn-default" value="Login">
            </div>
        </form>
    </div>
    <div class="col-md-6">
        <h3>New User Login</h3>
        <form method="post" role="form">
            <div class="form-group">
                <label for="username_new">Email</label>
                <input type="text" placeholder="Email" name="username_new" class="form-control">

                <label for="password_new">Password</label>
                <input type="password" placeholder="Password" name="password_new" class="form-control">
                <input type="hidden" value="true" name="newUser">

                <input type="submit" class="btn btn-default" value="Create Profile">
            </div>
        </form>
    </div>
</div>
<% include ../static/script %>
<% include ../static/footer %>