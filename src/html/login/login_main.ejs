<% include ../static/header %>
<div class="row">
    <div class="large-12 columns">
        <% if(pageErrorMessage.length > 0) { %>
        <p><%= pageErrorMessage %></p>
        <% } %>
    </div>
    <div class="large-6 columns">
        <h3>Login</h3>
        <form method="post" role="form">
            <div class="row">
                <div class="large-12 columns">
                    <label>Email
                        <input type="text" placeholder="Email" name="username_existing">
                    </label>
                </div>
                <div class="large-12 columns">
                    <label>Password
                        <input type="password" placeholder="Password" name="password_existing">
                    </label>
                </div>
                <div class="large-12 columns">
                    <input type="submit" class="button" value="Login">
                </div>
            </div>
        </form>
    </div>
    <div class="large-6 columns">
        <h3>New User Login</h3>
        <form method="post" role="form">
            <div class="row">
                <div class="large-12 columns">
                    <label>Email
                        <input type="text" placeholder="Email" name="username_new">
                    </label>
                </div>
                <div class="large-12 columns">
                    <label>Password
                        <input type="password" placeholder="Password" name="password_new">
                    </label>
                    <input type="hidden" value="true" name="newUser">
                </div>
                <div class="large-12 columns">
                    <input type="submit" class="button" value="Create Profile">
                </div>
            </div>
        </form>
    </div>
</div>
<% include ../static/script %>
<% include ../static/footer %>